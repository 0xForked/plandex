[
  {
    "name": "plandex-server",
    "image": "${ECR_REPOSITORY_URI}:${IMAGE_TAG}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "environment": [
      {
        "name": "ECS_CONTAINER_STOP_TIMEOUT",
        "value": "60m"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "plandex-efs-volume",
        "containerPath": "/plandex-server",
        "readOnly": false
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/plandex-server",
        "awslogs-region": "${AWS_REGION}",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
